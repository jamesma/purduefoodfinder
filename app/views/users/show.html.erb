<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <%= @user.name %>
      </h1>
      <div class="stats">
        <strong>
          <%= @user.email %>
        </strong>
      </div>
    </section>
  </aside>
  <div class="span9">
    <% if @user.events.any? %>
      <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="user_list">
        <thead>
          <tr>
            <th>Date & Time</th>
            <th>Title</th>
            <th>Location</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "users/event", collection: @events %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>