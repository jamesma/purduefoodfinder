<% provide(:title, 'Settings') %>
<h1>Settings</h1>

<div class="row">
  <div class="span4 offset4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
      <%= f.error_notification %>
      
      <%= f.input :name, required: false, :autofocus => true, input_html: {size: 40, maxlength: 30} %>
      <%= f.input :email, required: false, :disabled => true, input_html: {size: 40, maxlength: 30} %>
      <%= f.input :password, required: false, :autocomplete => "off", input_html: {size: 40, maxlength: 30} %>
      <%= f.input :password_confirmation, :required => false, input_html: {size: 40, maxlength: 30} %>
      <%= f.input :current_password, required: false, input_html: {size: 40, maxlength: 30} %>

      <%= f.button :submit, 'Update', :class => 'btn-primary' %>
    <% end %>
    <p><%= link_to "delete account...", registration_path(resource_name), data: { confirm: "Are you sure? This cannot be undone." }, method: :delete, class: 'delete-account' %></p>
  </div>
</div>