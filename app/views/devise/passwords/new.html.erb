<% provide(:title, 'Password Reset') %>
<h1>Password Reset</h1>

<div class="row">
  <div class="span4 offset4">
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
      <%= f.input :email, :autofocus => true %>
      <%= f.button :submit, "Reset Password", :class => 'btn btn-large btn-primary' %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>