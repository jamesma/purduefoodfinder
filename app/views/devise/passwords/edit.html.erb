<% provide(:title, 'Change Password') %>
<h1>Change Password</h1>

<div class="row">
  <div class="span4 offset4">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-vertical' }) do |f| %>
      <%= f.input :reset_password_token, :as => :hidden %>
      <%= f.full_error :reset_password_token %>

      <%= f.input :password, :label => "New password", :required => false %>
      <%= f.input :password_confirmation, :label => "Confirm your new password", :required => false %>

      <%= f.button :submit, "Change password", class: 'btn btn-large btn-primary' %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>