<% provide(:title, 'Resend Confirmation') %>
<h1>Resend Confirmation</h1>

<div class="row">
  <div class="span4 offset4">
    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-vertical' }) do |f| %>
      <%= f.input :email, :required => false %>
      <%= f.button :submit, "Resend confirmation instructions", class: 'btn btn-large btn-primary' %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>