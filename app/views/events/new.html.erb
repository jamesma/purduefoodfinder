<% provide(:title, 'Create Event') %>
<h1>Create Event</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for(@event, :html => {:class => 'form-vertical' }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :name %>
      <%= f.input :details %>
      <%= f.input :where %>
      <%= f.input :source %>

      <div class="control-group date required">
        <label class="date required control-label" for="event_whendate"><abbr title="required">*</abbr> Date</label>
        <div class="controls">
          <div class="input-prepend">
            <span class="input-append date datepicker" data-date="" data-date-format="dd-mm-yyyy">
              <input id="event_whendate" class="span2" size="16" type="text" name="event[whendate]" />
              <span class="add-on"><i class="icon-th"></i></span>
            </span>
          </div>
        </div>
      </div>

      <div class="control-group time required">
        <label class="time required control-label" for="event_whentime"><abbr title="required">*</abbr> Time</label>
        <div class="controls">
          <div class="input-prepend">
            <span class="input-append bootstrap-timepicker-component">
              <input id="event_whentime" class="input-small timepicker" type="text" name="event[whentime]" />
              <span class="add-on"><i class="icon-time"></i></span>
            </span>
          </div>
        </div>
      </div>

      <%= f.button :submit, 'Create Event', :class => 'btn btn-large btn-primary' %>
    <% end %>
  </div>
</div>